<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1.618"
        android:background="#FFAAAAAA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FFAAAAAA"
            android:orientation="vertical">

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="65dp"-->
            <!--                android:background="@drawable/bg_textview_shape"-->
            <!--                android:gravity="center"-->
            <!--                android:textSize="14sp"-->
            <!--                android:text="@string/introduction" />-->
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_textview_shape"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/getSelected"
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector"
                    android:text="GetSelected"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/setSelected"
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector"
                    android:text="SetSelected"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/addByAllArgs"
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector"
                    android:text="AddByAllArgs"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/addByMCCAndMNC"
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector"
                    android:text="AddByMCCAndMNC"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="115dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selector"
                    android:text="Clear"
                    android:textAllCaps="false"
                    android:textSize="14sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFAAAAAA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!--                <TextView-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_height="60dp"-->
            <!--                    android:layout_weight="1.618"-->
            <!--                    android:textSize="18sp"-->
            <!--                    android:padding="5dp"-->
            <!--                    android:gravity="center_vertical"-->
            <!--                    android:text="@string/logcat_clear"-->
            <!--                    android:background="@drawable/bg_textview_shape" />-->

            <Button
                android:id="@+id/settings"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/button_selector"
                android:text="@string/settings"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_textview_shape"
                android:gravity="top"
                android:hint="@string/logcat_output"
                android:maxLines="50"
                android:paddingHorizontal="@dimen/textview_horizontal_margin"
                android:scrollbars="vertical"
                android:textSize="17.6sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>